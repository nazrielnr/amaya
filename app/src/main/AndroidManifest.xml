<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 
    ============================================================================
    PERMISSIONS EXPLAINED
    ============================================================================
    
    1. INTERNET: Required for AI API communication (Claude, OpenAI, Gemini)
    2. ACCESS_NETWORK_STATE: Required to check connectivity before API calls
    3. MANAGE_EXTERNAL_STORAGE: Required for Android 11+ to access project files
       outside the app's sandbox. This is essential for a coding agent that
       needs to read/write source code files.
    4. FOREGROUND_SERVICE: For long-running AI operations in background
    
    Note: MANAGE_EXTERNAL_STORAGE requires special permission flow on Android 11+
    ============================================================================
    -->
    
    <!-- Network permissions for AI API communication -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- File access for code editing (Android 11+ requires special handling) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    
    <!-- Foreground service for long-running operations -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <application
        android:name=".OpenCodeApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Amaya"
        android:requestLegacyExternalStorage="true"
        android:extractNativeLibs="true"
        android:enableOnBackInvokedCallback="true"
        tools:targetApi="34">
        
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.Amaya">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.Amaya" />
        
        <activity
            android:name=".ui.settings.PersonaActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.Amaya" />
        
        <activity
            android:name=".ui.settings.AgentsActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.Amaya" />
        
        <activity
            android:name=".ui.workspace.WorkspaceActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.Amaya" />
        
        <!-- File provider for secure file sharing -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        
        <!-- Foreground service for AI operations -->
        <service
            android:name=".service.AiOperationService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
        
    </application>

</manifest>
